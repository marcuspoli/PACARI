{
  "manifest_version": 3,
  "name": "PACARI",
  "description": "Uma extens√£o para criptografar e descriptografar mensagens de forma segura.",
  "version": "1.1",
  "icons":{
	  "16": "images/homem16.ico",
	  "32": "images/homem32.ico",
	  "64": "images/homem64.ico",
	  "128": "images/homem128.ico"
  },
  "action": {
    "default_icon": "popup/homem16.ico",
    "default_popup": "popup/main.html"
  },  
"permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup/main.js"]
    }
  ]
}